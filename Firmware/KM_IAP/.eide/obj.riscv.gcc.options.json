{
    "version": 2,
    "beforeBuildTasks": [],
    "afterBuildTasks": [],
    "global": {
        "output-debug-info": "enable",
        "arch": "rv32imafcxw",
        "abi": "ilp32f",
        "code-model": "medlow",
        "misc-control": "-msmall-data-limit=8 -fmessage-length=0 -fsigned-char -ffunction-sections -fdata-sections -msave-restore -fno-common -fsingle-precision-constant -flto -Wall -Wunused -Wuninitialized"
    },
    "c/cpp-compiler": {
        "language-c": "gnu17",
        "language-cpp": "gnu++17",
        "optimization": "level-size",
        "warnings": "all-warnings",
        "one-elf-section-per-function": true,
        "one-elf-section-per-data": true,
        "C_FLAGS": "-Wl,-Bstatic",
        "CXX_FLAGS": "-Wl,-Bstatic -fno-exceptions -fno-use-cxa-atexit -Weffc++"
    },
    "asm-compiler": {
        "ASM_FLAGS": "-Wl,-Bstatic"
    },
    "linker": {
        "output-format": "elf",
        "remove-unused-input-sections": true,
        "LD_FLAGS": "-Xlinker --gc-sections -nostartfiles --specs=nano.specs --specs=nosys.specs",
        "LIB_FLAGS": "-lm -lstdc++",
        "$toolName": "auto"
    }
}